<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.11/semantic.min.css">
        <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
        <title>Gaming Directory</title>
    </head>
    <body>
        <div id="menu" class="ui fixed inverted menu">
            <div class="container">
                <div class="header item"><i class="code icon"></i>Gaming</div>
                <a href="/games" class="item active"><i class="home icon"></i></a>
                <a href="/games/new" class="item"><i class="add circle icon"></i>New Post</a>
                <a href="/games" class="item">Games List</a>
            </div>
            <div class="right menu">
                <% if(!currentUser){ %>
                <!--only when logged out-->
                    <a class="active item blue" href="/login"><i class="user circle icon"></i>Login</a>
                    <a class="active item" href="/register"><i class="add user icon"></i>Register</a>
                <% } else { %>
                <!--only when logged in-->
                    <a class="item" href="#"><i class="user circle outline icon"></i><%= currentUser.username.toUpperCase() %></a>
                    <a class="active item red" href="/logout"><i class="sign out icon"></i>Logout</a>
                <% } %>
            </div>
        </div>
        
        <% if(error && error.length > 0) { %>
            <div class="ui negative message" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0) { %>
            <div class="ui positive message" role="alert">
                <%= success %>
            </div>
        <% } %>