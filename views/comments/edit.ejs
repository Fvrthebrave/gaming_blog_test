<div class="ui main text container segment">
    <div class="ui header large">Edit Comment</div>
    <form class="ui form" action="/games/<%= game_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Post Comment</label>
            <input type="text" name="comment[text]" value="<%= comment.text %>" required>
        </div>
        <button class="ui button blue large" type="submit">Submit!</button>
        <a class="ui button red large" href="/games/<%= game_id %>/">Go Back</a>
    </form>
</div>

