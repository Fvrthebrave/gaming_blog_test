<% include ./partials/header.ejs %>

<div class="ui main text container segment">
    <div class="ui header huge">Edit Game Details</div>
        <form class="ui form" action="/games/<%=game._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="game[title]" value="<%=game.title%>" required>
            </div>
            <div class="field">
                <label>Image URL</label>
                <input type="text" name="game[image]" value="<%=game.image%>" required>
            </div>
            <div class="field">
                <label>Post Contents</label>
                <textarea name="game[body]" required><%=game.body%></textarea>
            </div>
                <button class="ui button green" type="submit">Update</button>
                <a class="ui button red" href="/games/<%=game._id%>">Go back</a>
        </form>
    </div>
</div>
<% include ./partials/footer.ejs %>